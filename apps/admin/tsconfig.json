{
  "extends": "@tdc/config/typescript/base",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@tdc/ui": [
        "../../packages/ui"
      ],
      "@tdc/schemas": [
        "../../packages/schemas"
      ],
      "@tdc/firebase": [
        "../../packages/firebase"
      ],
      "@tdc/types": [
        "../../packages/types"
      ]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
