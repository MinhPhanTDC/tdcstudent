# ===========================================
# The Design Council - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# -----------------------------------------
# Firebase Configuration (REQUIRED)
# Get these from Firebase Console > Project Settings
# -----------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id

# -----------------------------------------
# Firebase Configuration (OPTIONAL)
# -----------------------------------------
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebasedatabase.app

# -----------------------------------------
# App URLs (OPTIONAL - defaults shown)
# -----------------------------------------
NEXT_PUBLIC_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001
NEXT_PUBLIC_STUDENT_URL=http://localhost:3002

# -----------------------------------------
# Development Only
# -----------------------------------------
# NEXT_PUBLIC_USE_EMULATOR=true
